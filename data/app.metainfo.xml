<?xml version="1.0" encoding="UTF-8" ?>
<component type="desktop">
  <id>@app_id@</id>
  <launchable type="desktop-id">@app_id@.desktop</launchable>
  <name translatable="no">Biblioteca</name>
  <developer_name translatable="no">Akshay Warrier</developer_name>
  <update_contact>akshaywarrier@gnome.org</update_contact>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0</project_license>
  <summary>Documentation viewer for GNOME</summary>
  <translation type="gettext">@app_id@</translation>
  <description>
    <p>Biblioteca lets you browse and read GNOME documentation.</p>
    <p>Among other things, Biblioteca comes with</p>
    <ul>
      <li>Offline documentation</li>
      <li>Dark mode support</li>
      <li>Fuzzy search</li>
      <li>Mobile / adaptive</li>
    </ul>
  </description>
  <url type="homepage">https://github.com/workbenchdev/Biblioteca</url>
  <url type="bugtracker">https://github.com/workbenchdev/Biblioteca/issues</url>
  <!-- <url type="donation">https://github.com/workbenchdev/Biblioteca</url> -->
  <!-- <url type="translate">https://workbench.sonny.re/translate</url> -->
  <url type="vcs-browser">https://github.com/workbenchdev/Biblioteca</url>
  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/workbenchdev/Biblioteca/main/data/screenshot.png</image>
    </screenshot>
  </screenshots>
  <content_rating type="oars-1.1" />
  <releases>
    <release version="1.2" date="2023-11-20">
      <description translatable="no">
        <ul>
          <li>Add support for tabs</li>
          <li>Fix an issue where shortcuts window prevents app from closing</li>
          <li>Fix an issue where main window CSS leaks into other windows</li>
          <li>Show status page in sidebar when no results found</li>
          <li>Slightly increase width of window</li>
        </ul>
      </description>
    </release>
    <release version="1.1" date="2023-11-12">
      <description translatable="no">
        Various bug fixes.
      </description>
    </release>
    <release version="1.0" date="2023-11-10">
      <description translatable="no">
        This is the first release of Biblioteca with GNOME 45 documentation. We hope you like it.
      </description>
    </release>
  </releases>
  <kudos>
    <kudo>HiDpiIcon</kudo>
    <kudo>HighContrast</kudo>
    <kudo>ModernToolkit</kudo>
  </kudos>
  <requires>
    <display_length compare="ge">360</display_length>
  </requires>
  <recommends>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </recommends>
</component>
