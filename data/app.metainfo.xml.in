<?xml version="1.0" encoding="UTF-8" ?>
<component type="desktop">
  <id>@app_id@</id>
  <launchable type="desktop-id">@app_id@.desktop</launchable>
  <name translatable="no">Biblioteca</name>
  <developer id="com.github.akshaywarrier">
    <name>Akshay Warrier</name>
  </developer>
  <update_contact>akshaywarrier@gnome.org</update_contact>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0</project_license>
  <summary>Read GNOME documentation offline</summary>
  <translation type="gettext">@app_id@</translation>
  <description>
    <p>Biblioteca lets you browse and read GNOME documentation. Among other things, Biblioteca comes with</p>
    <ul>
      <li>Offline documentation</li>
      <li>Web browsing</li>
      <li>Tabs</li>
      <li>Dark mode support</li>
      <li>Fuzzy search</li>
      <li>Mobile / adaptive</li>
    </ul>
  </description>
  <url type="homepage">https://github.com/workbenchdev/Biblioteca</url>
  <url type="bugtracker">https://github.com/workbenchdev/Biblioteca/issues</url>
  <!-- <url type="donation">https://github.com/workbenchdev/Biblioteca</url> -->
  <!-- <url type="translate">https://workbench.sonny.re/translate</url> -->
  <url type="vcs-browser">https://github.com/workbenchdev/Biblioteca</url>
  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/workbenchdev/Biblioteca/main/data/screenshot.png</image>
      <caption>Biblioteca main window with GTK 4 docs selected</caption>
    </screenshot>
  </screenshots>
  <content_rating type="oars-1.1" />
  <releases>
    <release version="1.5" date="2024-10-07">
      <description translatable="no">
        <ul>
          <li>Update to GNOME 47</li>
          <li>Add gom documentation</li>
          <li>Remember window size</li>
          <li>Update vte to 0.78</li>
          <li>Update libportal to 0.8.1</li>
          <li>Update libshumate to 1.3.0</li>
          <li>Update libspelling to 0.4.2</li>
          <li>Remove irrelevant context menu entries</li>
        </ul>
      </description>
    </release>
    <release version="1.4" date="2024-05-01">
      <description translatable="no">
        <ul>
          <li>Add support for Find in page (Ctrl + F)</li>
          <li>Fix bug where shortcuts don't work when WebView is focused</li>
          <li>Do not show a progress bar for offline docs</li>
        </ul>
      </description>
    </release>
    <release version="1.3" date="2024-03-20">
      <description translatable="no">
        <ul>
          <li>Add GLib/Gio/GObject docs</li>
          <li>Add support for web content</li>
          <li>Improve searching UI</li>
          <li>Add support for keyboard navigation in sidebar</li>
          <li>Fix bug where creating new tab updates current selected tab</li>
          <li>Add zoom buttons to primary menu</li>
          <li>Add raised border to WebView on scroll</li>
          <li>Make tags in search results insensitive</li>
          <li>Add shortcuts to view open tabs and toggle sidebar</li>
          <li>Fix modality of shortcuts window</li>
          <li>Update VTE to 0.76</li>
          <li>Update libshumate to 1.2</li>
        </ul>
      </description>
    </release>
    <release version="1.2" date="2023-11-20">
      <description translatable="no">
        <ul>
          <li>Add support for Tabs</li>
          <li>Add middle-click support in the sidebar for opening in a new tab</li>
          <li>Fix an issue where shortcuts window prevents app from closing</li>
          <li>Fix an issue where main window CSS leaks into other windows</li>
          <li>Show status page in sidebar when no results found</li>
          <li>Fix layout with "Large Text" accessibility option</li>
        </ul>
      </description>
    </release>
    <release version="1.1" date="2023-11-12">
      <description translatable="no">
        Various bug fixes.
      </description>
    </release>
    <release version="1.0" date="2023-11-10">
      <description translatable="no">
        This is the first release of Biblioteca with GNOME 45 documentation. We hope you like it.
      </description>
    </release>
  </releases>
  <kudos>
    <kudo>HiDpiIcon</kudo>
    <kudo>HighContrast</kudo>
    <kudo>ModernToolkit</kudo>
  </kudos>
  <requires>
    <display_length compare="ge">360</display_length>
  </requires>
  <recommends>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
    <internet>always</internet>
  </recommends>
  <branding>
    <color type="primary" scheme_preference="light">#99c1f1</color>
    <color type="primary" scheme_preference="dark">#1c71d8</color>
  </branding>
</component>
