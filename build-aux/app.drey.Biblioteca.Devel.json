{
  "id": "app.drey.Biblioteca.Devel",
  "runtime": "org.gnome.Sdk",
  "runtime-version": "45",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": ["org.gnome.Sdk.Docs"],
  "command": "biblioteca",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--share=network"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "#/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "/share/installed-tests",
    "*.la",
    "*.a"
  ],
  "modules": [
    "modules/gi-docgen.json",
    "modules/vte.json",
    "modules/libshumate.json",
    "modules/libportal.json",
    "modules/libspelling.json",
    "modules/blueprint-compiler.json",
    {
      "name": "Biblioteca",
      "buildsystem": "meson",
      "config-opts": ["-Dprofile=development"],
      "sources": [
        {
          "type": "dir",
          "path": ".."
        }
      ]
    }
  ]
}
